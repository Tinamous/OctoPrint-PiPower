</div>

<!-- Fans -->
<div class="row-fluid">
	<h3>Fans:</h3>
        <div class="row-fluid">
		<div id="pipower-fans-graph" class="pipower-graph"></div>
	</div>

	<table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Fan</th>
                <th>Speed</th>
                <th>Set Speed</th>
                <th>Control</th>
            <tr>
        </thead>
        <tbody data-bind="foreach: fans">
            <tr>
                <td data-bind="text: caption"></td>
                <td data-bind="text: speed.value" style="width:10%"></td>
                <td style="width:30%">
                    <select class="btn btn-block control-box" data-bind="options: speedOptions, value: selectedSpeedOption"></select>
                    <button class="btn btn-block control-box" data-bind="click: update">Set</button>
                </td>
                <td>
                    <button class="btn btn-block control-box btn-success" data-bind="click: on">On</button>
                    <button class="btn btn-block control-box" data-bind="click: off">Off</button>
                </td>
            </tr>
        </tbody>
	</table>
</div>

<!-- GPIO -->
<div class="row-fluid">
	<h3>GPIO:</h3>
    <div class="row-fluid">
		<div id="pipower-gpio-graph" class="pipower-graph"></div>
	</div>

	<table class="table table-bordered table-hover">
        <thead>
		<tr>
			<th>Pin</th>
            <th>Value</th>
            <th>Mode</th>
			<th>Control</th>
		<tr>
        </thead>
        <tbody data-bind="foreach: gpioOptions">
            <tr>
                <td data-bind="text: caption"></td>
                <td data-bind="text: valueText" style="width:10%"></td>
                <td data-bind="text: modeText"></td>
                <td>
                    <span data-bind="visible: showControl">
                        <button class="btn btn-block control-box" data-bind="click: setLow">LOW</button>
                        <button class="btn btn-block control-box" data-bind="click: setHigh">HIGH</button>
                    </span>
                </td>
            </tr>
        </tbody>
	</table>
</div>
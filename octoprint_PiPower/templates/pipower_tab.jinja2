<!-- Power -->
<div class="row-fluid">
	<h3>Power:</h3>
	<div class="row-fluid">
		<div id="pipower-power-graph" class="pipower-graph"></div>
	</div>

	<table class="table table-bordered table-hover">
            <thead>
            <tr data-bind="with: voltage">
                <th>Voltage</th>
                <th>Value</th>
                <th>Min</th>
                <th>Max</th>
                <th>Unit</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: powerMeasurementsTable">
            <tr>
                <td data-bind="text: caption"></td>
                <td data-bind="text: value"></td>
                <td data-bind="text: minValue"></td>
                <td data-bind="text: maxValue"></td>
                <td data-bind="text: unit"></td>
            </tr>
        </tbody>
	</table>
</div>

<!-- Temperatures -->
<div class="row-fluid">
	<h3>Temperatures:</h3>
	<div class="row-fluid">
		<div id="pipower-temperature-graph" class="pipower-graph"></div>
	</div>
	<table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Probe</th>
                <th>Temperature /&deg;C</th>
                <th>Min /&deg;C</th>
                <th>Max /&deg;C</th>
            </tr>
        </thead>

        <tbody data-bind="foreach: temperatureSensors">
		    <tr data-bind="if: enabled">
			    <td data-bind="text: caption"></td>
			    <td data-bind="text: value"></td>
                <td data-bind="text: minValue"></td>
                <td data-bind="text: maxValue"></td>
		    </tr>
        </tbody>
	</table>
</div>

<!-- Light -->
<div class="row-fluid">
	<h3>Light:</h3>
    <div class="row-fluid">
		<div id="pipower-light-level-graph" class="pipower-graph"></div>
	</div>

	<table class="table table-bordered table-hover">
		<tr>
			<td data-bind="text: settings.lightSensorCaption"></td>
			<td data-bind="text: lightLevel.value"></td>
			<td data-bind="text: lightLevel.minValue"></td>
            <td data-bind="text: lightLevel.maxValue"></td>
		</tr>
